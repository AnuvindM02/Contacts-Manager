<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="page-content">

            <div class="margin-bottom">
                <div class="flex" id="top-bar-div">
                    <div class="flex-1" id="app-title-div">
                        <h1 class="app-title">
                            <i class="fa-solid fa-people-simple"></i>
                            Contacts Manager
                        </h1>
                    </div>


                    <div class="flex-1 pr" id="search-box-div">
                        <div class="navbar account-links">

                            <ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <i class="fa-solid fa-user"></i>
                                        @User.Identity?.Name
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Home" asp-action="Index" asp-area="Admin">Admin</a>
                                        </li>
                                    }
                                    <li>
                                        <a asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-controller="Account" asp-action="Register" class="@(ViewBag.CurrentUrl=="~/Account/Register" ? "nav-active" : "")">Register</a>
                                    </li>

                                    <li>
                                        <a asp-controller="Account" asp-action="Login" class="@(ViewBag.CurrentUrl=="~/Account/Login" ? "nav-active" : "")">Login</a>
                                    </li>
                                }
                            </ul>

                        </div>

                    </div>
                </div>

            </div>


            <div class="navbar mb">

                <ul>
                    <li>
                        <a asp-controller="Person" asp-action="Index" class="@(ViewBag.CurrentUrl=="~/Person/Index" ? "nav-active" : "")">Persons</a>
                        <a asp-controller="Countries" asp-action="UploadFromExcel" class="@(ViewBag.CurrentUrl=="~/Countries/UploadFromExcel" ? "nav-active" : "")">Upload Countries</a>
                    </li>
                </ul>
            </div>

            <div class="body">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>
